<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	 version="4.0">
    
      <!--to add post on the page-->
    <servlet>
        <servlet-name>AddPostServlet</servlet-name>
        <servlet-class>com.servlet.AddPostServlet</servlet-class>
    </servlet>

     <!--Map Servlet to URL--> 
    <servlet-mapping>
        <servlet-name>AddPostServlet</servlet-name>
        <url-pattern>/add_job</url-pattern>
    </servlet-mapping>
    
    
    
    <!--to delete the job page-->
    <servlet>
        <servlet-name>DeleteJobServlet</servlet-name>
        <servlet-class>com.servlet.DeleteJobServlet</servlet-class>
    </servlet>

     <!--Map Servlet to URL--> 
    <servlet-mapping>
        <servlet-name>DeleteJobServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    
    
    <!--to login-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlet.LoginServlet</servlet-class>
    </servlet>

     <!--Map Servlet to URL--> 
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!--to logout page-->
    
     <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.servlet.LogoutServlet</servlet-class>
    </servlet>

     <!--Map Servlet to URL--> 
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    
    
    <!--to register page-->
    
     <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.servlet.RegisterServlet</servlet-class>
    </servlet>

     <!--Map Servlet to URL--> 
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/add_user</url-pattern>
    </servlet-mapping>
    
    
    <!--to update page-->
    
     <servlet>
        <servlet-name>UpdateJobServlet</servlet-name>
        <servlet-class>com.servlet.UpdateJobServlet</servlet-class>
    </servlet>

     <!--Map Servlet to URL--> 
    <servlet-mapping>
        <servlet-name>UpdateJobServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    
    <!--to update user-->
    
     <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>com.servlet.UpdateUserServlet</servlet-class>
    </servlet>

     <!--Map Servlet to URL--> 
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/update_profile</url-pattern>
    </servlet-mapping>
    
    
    
   <!--end of the mapping and the post method firing-->
    
    
    
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
